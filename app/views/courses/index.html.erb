<div class="container">
  <h1>Courses</h1>

  <%= link_to 'New Course', new_course_path, class: 'btn btn-success mb-3' %>

  <% @courses.each do |course| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= course.name %></h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">Written by: <%= course.teacher.full_name %></h6>
        <a href="#" class="card-link"><%= link_to "Click to see course", course_path(course) %></a>
        
        <!-- Edit Button -->
        <%= link_to 'Edit', edit_course_path(course), class: 'btn btn-primary btn-sm' %>
        
        <!-- Delete Button -->
        <%= link_to 'Delete', course_path(course), method: :delete, data: { confirm: 'Are you sure you want to delete this course?' }, class: 'btn btn-danger btn-sm' %>
      </div>
    </div>
  <% end %>
</div>