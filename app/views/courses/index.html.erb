<div class="container">
  <h1>Courses</h1>

    <% @courses.each do |course| %>
    <div class="card" >
      <div class="card-body">
        <h5 class="card-title"><%=course.name %></h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">Written by: <%=course.teacher.full_name %></h6>
        <a href="#" class="card-link"><%= link_to "Click to see course", course_path(course) %></a>
      </div>
    </div>
    <% end %>

</div>