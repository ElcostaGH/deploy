<h1><%= @course.name %></h1>
<p>Teacher: <%= @course.teacher.full_name %></p>

<h2>Lessons</h2>
<ul>
  <% @lessons.each do |lesson| %>
    <li>
      <%= lesson.title %> - <%= lesson.course.teacher.full_name %> - 
      <%= link_to "Click to see lesson", course_lesson_path(@course, lesson), class: 'card-link' %>
      <%= link_to 'Edit', edit_course_lesson_path(@course, lesson), class: 'btn btn-primary btn-sm' %>
      <%= link_to 'Delete', course_lesson_path(@course, lesson), method: :delete, data: { confirm: 'Are you sure you want to delete this lesson?' }, class: 'btn btn-danger btn-sm' %>
    </li>
  <% end %>
</ul>

<%= link_to 'New Lesson', new_course_lesson_path(@course), class: 'btn btn-success' %>